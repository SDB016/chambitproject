<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:background="#201d1d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher_round"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#201d1d"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <TextView
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참빛설계 지하철 어플"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="출발"
            android:layout_marginVertical="10dp"/>
        <LinearLayout
            android:background="#201d1d"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <Button
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/station_start"
            android:background="#dddddd"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="선택해주세요"
            android:onClick="set_start"
            android:paddingVertical="5dp"/>
        <LinearLayout
            android:background="#201d1d"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="도착"
            android:layout_marginVertical="10dp"/>
        <LinearLayout
            android:background="#201d1d"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <Button
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/station_end"
            android:background="#dddddd"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="선택해주세요"
            android:onClick="set_end"
            android:paddingVertical="5dp"/>
        <LinearLayout
            android:background="#201d1d"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:id="@+id/button2"
            android:background="#dddddd"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="시작"
            android:onClick="btn_service"
            android:paddingVertical="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:background="#dddddd"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="qr코드"
            android:onClick="btn_qr"
            android:paddingVertical="5dp"/>
        <TextView
            android:textSize="20dp"
            android:textColor="#555"
            android:gravity="center"
            android:id="@+id/baggage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="짐칸정보"
            android:layout_marginVertical="10dp"/>
    </LinearLayout>
</LinearLayout>